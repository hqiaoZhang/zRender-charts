import zrender from 'zrender'
import _ from 'lodash'
import AddAxis from './addAxis.js'
import { zrenderInit } from '../../util/util'
import { showTips, hideTips } from './tips.js'

export default class RectBar {
  /**
   * 图表默认配置项
   * @return {object} 默认配置项
   */
  defaultSetting () {
    return{
      width: 600,
      height: 300,
      itemStyle: {
        width: 15,
        radius: 10,
        fill: '#3ed5de',
        margin: {
          top: 20,
          right: 20,
          bottom: 20,
          left: 20
        }
      }
    }  
  }
 
  /**
   * Creates an instance of Heatmap
   * @param {string} selector 容器元素选择器
   * @param {object} opt 图表组件配置项
   */
  constructor(selector, opt) {
    // 获取配置项
    this.selector = selector
    const defaultSetting = this.defaultSetting()
    this.config = _.merge({}, defaultSetting, opt)
    const { width, height, itemStyle } = this.config
    const { top, right, bottom, left } = itemStyle.margin
    this.config.xWidth = width - left - right
    this.config.yHeight = height - top - bottom
    // 初始化zrender
    this.zr = zrenderInit(selector, width, height)
    // 实例化坐标轴
    this.addAxis = new AddAxis(this.zr, this.config)
    this.gradient = [
      new zrender.LinearGradient(0, 0, 1, 1, [
        {
          offset: 0,
          color: '#FFB166'
        },
        {
          offset: 1,
          color: '#37B0FF'
        }
      ]),
      new zrender.LinearGradient(0, 0, 1, 1, [
        {
          offset: 0,
          color: 'red'
        },
        {
          offset: 1,
          color: '#37B0FF'
        }
      ])
    ]
  }
 
 /**
  *  渲染
  *  @param    {array}  data 图表数据
  *  @return   {void}   
  */
  render(data) {
    const self = this
    self.zr.clear()
    // 清除画布
    let dataset = []
    data.map(d => dataset.push(d.value))
    // x轴
    self.xScale = self.addAxis.renderXAxis(data)
    // y轴
    self.yScale = self.addAxis.renderYAxis(dataset)
    self.setRect(data) 
  }

  /**
   *  设置矩形
   *  @param    {array}  data 图表数据
   *  @return   {void}  
   */
  setRect(data) {
    const self = this
    const { height, itemStyle } = self.config
    const { bottom } = itemStyle.margin
    const { width: iWidth, radius, margin } = itemStyle
    const rectG = new zrender.Group()

    rectG.position[1] = -bottom
    data.map((d, i) => {
      let h = self.yScale(d.value)
      const rect = new zrender.Rect({
        shape: {
          r: [radius, radius, 0, 0],
          x: self.xScale(i) + margin.left + iWidth / 2,
          y: height - bottom,
          height: bottom,
          width: iWidth
        },
        style: {
          fill: self.gradient[0]
        },
        data: d
      })
      // 添加动画
      rect.animateTo({
        shape: {
          height: h,
          y: height - h
        }
      }, 350)
      rectG.add(rect)
      // 事件
      rect.on('mouseover', (evt) => {
        let posi = {
          x: evt.offsetX,
          y: evt.offsetY - 60
        }
        showTips(self.selector, d, posi)
        self.zr.addHover(rect, {
          fill: self.gradient[1]
        })
      })
      rect.on('mouseout', () => {
        hideTips(self.selector)
        self.zr.removeHover(rect)
      })
    })
    self.zr.add(rectG)
  }
}
